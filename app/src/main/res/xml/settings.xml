<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <PreferenceCategory
            android:title="Einstellungen">

            <CheckBoxPreference
                android:key="enable_push"
                android:title="Google Push aktivieren"
                android:summary="Push aktivieren für schnellere Updates" />

            <EditTextPreference
                android:defaultValue="15"
                android:enabled="true"
                android:key="spaceapi_polling_freq"
                android:numeric="integer"
                android:title="Türstatus Update Interval"
                android:summary="Zeitraum in Minuten, zur regelmäßigen Abfrage des Türstatus"/>

        </PreferenceCategory>
    </PreferenceScreen>