<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_card_height"
    android:layout_marginRight="@dimen/product_card_margin"
    android:layout_marginLeft="@dimen/product_card_margin"
    android:layout_marginTop="@dimen/product_card_margin"
    android:layout_marginBottom="@dimen/product_card_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/product_photo"
            android:layout_width="@dimen/product_card_height"
            android:layout_height="@dimen/product_card_height"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image_avl" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/product_card_margin"
            android:layout_marginLeft="@dimen/product_card_margin"
            android:layout_marginTop="@dimen/product_card_margin"
            android:layout_marginBottom="@dimen/product_card_margin"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:paddingLeft="2dp"
                android:textSize="@dimen/product_name_size"
                android:fontFamily="sans-serif-medium"
                android:text="Product Name which can maybe be very very very very long and stuff" />

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="#000000"
                android:alpha=".20" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="@dimen/product_price_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/product_name_size" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>