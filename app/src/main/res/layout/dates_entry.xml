<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/card_horizontal_margin"
        android:paddingRight="@dimen/card_horizontal_margin"
        android:paddingBottom="@dimen/card_vertical_margin"
        android:paddingTop="@dimen/card_vertical_margin"
        >

        <TextView
            android:id="@+id/title_dates_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:text="Title"
            />

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/icon_dates_entry"
                android:layout_width="@dimen/dates_entry_event_icon_size"
                android:layout_height="@dimen/dates_entry_event_icon_size"
                android:src="@drawable/ic_event_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/icon_dates_entry"
                android:layout_toEndOf="@+id/icon_dates_entry">

                <TextView
                    android:id="@+id/date_dates_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    android:text="Subtitle"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dates_entry_icon_date_margin"
                    android:layout_toRightOf="@+id/icon_dates_entry"
                    />

                <TextView
                    android:id="@+id/time_dates_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    android:text="Subtitle"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dates_entry_icon_date_margin"
                    android:layout_toRightOf="@+id/icon_dates_entry"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>