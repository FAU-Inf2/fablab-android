<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:clickable="true"
    >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        >

        <ImageView
            android:id="@+id/icon_news_entry"
            android:layout_width="@dimen/card_icon_size"
            android:layout_height="@dimen/card_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/fablab_icon_black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_news_entry"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/news_entry_left_text_margin"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title_news_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/news_entry_bottom_title_margin"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="Title"
                />

            <TextView
                android:id="@+id/text_news_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Subtitle"
                android:singleLine="true"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
