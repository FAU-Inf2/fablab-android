<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/news_activity_actionbar_recyclerview_margin"
        android:orientation="vertical"
        android:layout_below="@+id/appbar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dates"
            android:layout_height="@dimen/news_activity_dates_recyclerview_height"
            android:layout_width="match_parent"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/news"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/shopping_cart_FAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/news_activity_FAB_padding"
        android:layout_marginBottom="@dimen/news_activity_FAB_padding"
        fab:menu_colorNormal="@android:color/black"
        fab:menu_colorPressed="@android:color/black"
        fab:menu_icon="@drawable/ic_add_shopping_cart_white_24dp"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/scan_FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_colorNormal="@android:color/black"
            fab:fab_colorPressed="@android:color/black"
            android:src="@drawable/ic_camera_alt_white_24dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/search_FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_colorNormal="@android:color/black"
            fab:fab_colorPressed="@android:color/black"
            android:src="@drawable/ic_search_white_24dp"
            />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>