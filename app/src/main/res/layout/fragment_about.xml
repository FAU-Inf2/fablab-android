<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize_about_title"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_version_rl"
            >

            <TextView
                android:id="@+id/about_version"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:textSize="@dimen/textsize_about_subtitle"
                android:padding="10dp"
                android:layout_toLeftOf="@+id/image_down_about_version"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/image_down_about_version"
                android:src="@drawable/ic_keyboard_arrow_down"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/about_own_license"
            android:text="@string/about_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="@dimen/textsize_about_text"
            />

        <include layout="@layout/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about">

            <TextView
                android:text="@string/about"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:textSize="@dimen/textsize_about_subtitle"
                android:padding="10dp"
                android:layout_toLeftOf="@+id/image_down_about"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/image_down_about"
                android:src="@drawable/ic_keyboard_arrow_down"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/about_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="@dimen/textsize_about_text" />

        <include layout="@layout/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_open_source_licenses">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:textSize="@dimen/textsize_about_subtitle"
                android:padding="10dp"
                android:text="@string/about_open_source_licenses"
                android:layout_toLeftOf="@+id/image_down_about_open_source_licenses"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/image_down_about_open_source_licenses"
                android:src="@drawable/ic_keyboard_arrow_down"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/about_used_libraries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="@dimen/textsize_about_text"/>

    </LinearLayout>
</ScrollView>