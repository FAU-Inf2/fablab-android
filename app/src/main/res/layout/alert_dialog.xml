<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/alert_dialog_margin"
    android:paddingRight="@dimen/alert_dialog_margin"
    android:paddingTop="@dimen/alert_dialog_margin"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="@string/alert_dialog_title"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_alert_title" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/alert_dialog_tool"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_alert_subtitle" />


    <Spinner
        android:id="@+id/alert_dialog_tool_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:visibility="gone" />

    <EditText
        android:id="@+id/alert_dialog_edit_text_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:inputType="textPhonetic"
        android:textSize="@dimen/textsize_alert_text"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/alert_dialog_problem"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_alert_subtitle" />

    <EditText
        android:id="@+id/alert_dialog_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.14"
        android:gravity="start|top"
        android:inputType="textPhonetic|textMultiLine"
        android:scrollbars="vertical"
        android:textSize="@dimen/textsize_alert_text" />

    <Button
        android:id="@+id/alert_dialog_ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_button"
        android:text="@android:string/ok" />

</LinearLayout>