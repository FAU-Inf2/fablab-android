<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/product_name_inventory_item_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/news_entry_bottom_title_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_inventory_item_entry_product"
            android:text="Product Name"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/news_entry_bottom_title_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/news_entry_bottom_title_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_inventory_item_entry_text"
                    android:text="@string/inventory_card_product_id"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/news_entry_bottom_title_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_inventory_item_entry_text"
                    android:text="@string/inventory_card_user_name"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/news_entry_bottom_title_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_inventory_item_entry_text"
                    android:text="@string/inventory_card_updated_at"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/product_id_inventory_item_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/news_entry_bottom_title_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_inventory_item_entry_text"
                    android:text="Product ID"
                    />

                <TextView
                    android:id="@+id/user_name_inventory_item_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/news_entry_bottom_title_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_inventory_item_entry_text"
                    android:text="User Name"
                    />

                <TextView
                    android:id="@+id/updated_at_inventory_item_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/news_entry_bottom_title_margin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_inventory_item_entry_text"
                    android:text="Updated at"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/product_amount_inventory_item_entry"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:layout_marginBottom="@dimen/news_entry_bottom_title_margin"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_inventory_item_entry_amount"
                android:text="Product Amount"
                />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
