<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="de.fau.cs.mad.fablab.android.view.MainActivity">

<!-- The main content view -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar instead of ActionBar so the drawer can slide on top -->
        <include
            android:id="@+id/appbar"
            layout="@layout/appbar" />

        <!-- Real content goes here -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shopping_cart_FAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/fab_padding"
        android:layout_marginBottom="@dimen/fab_padding"
        fab:menu_colorNormal="@android:color/black"
        fab:menu_colorPressed="@android:color/black"
        fab:menu_icon="@drawable/ic_add_shopping_cart_white_24dp"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/scan_FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_colorNormal="@android:color/black"
            fab:fab_colorPressed="@android:color/black"
            android:src="@drawable/ic_camera_alt_white_24dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/search_FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_colorNormal="@android:color/black"
            fab:fab_colorPressed="@android:color/black"
            android:src="@drawable/ic_search_white_24dp"
            />

    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>
<!-- The navigation drawer -->
<android.support.design.widget.NavigationView
    android:id="@+id/navigation"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/white"
    app:headerLayout="@layout/navdrawer_header_login"
    app:itemIconTint="@android:color/black"
    app:itemTextColor="@android:color/black"
    app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>