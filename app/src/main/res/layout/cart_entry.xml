<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_product_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_card_height"
    android:layout_margin="@dimen/product_card_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/cart_entry_margin_bottom"
        android:layout_marginLeft="@dimen/cart_entry_margin_left_right"
        android:layout_marginRight="@dimen/cart_entry_margin_left_right"
        android:layout_marginTop="@dimen/cart_entry_margin_top">

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:textSize="@dimen/textsize_cart_entry_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_product_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cart_product_name"
            android:maxLines="2"
            android:textSize="@dimen/textsize_cart_entry_detail" />

        <TextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/textsize_cart_entry_text"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/cart_product_quantity"
            android:layout_toRightOf="@id/cart_product_quantity"
            android:gravity="end"
            android:textSize="@dimen/textsize_cart_entry_text"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
